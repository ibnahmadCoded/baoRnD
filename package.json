    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.5.0",
    "nodemailer": "^6.7.7",
    "serve": "^14.0.1",
    "stripe": "^10.3.0",
    "swagger-jsdoc": "^6.2.4",
    "swagger-ui-express": "^4.5.0"
  },
  "devDependencies": {
    "concurrently": "^7.3.0",
    "nodemon": "^2.0.19"
  }
